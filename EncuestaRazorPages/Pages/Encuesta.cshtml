@page
@model EncuestaRazorPages.Pages.EncuestaModel
@{
	ViewData["Title"] = "Encuesta";
}

<form>
	<div class="text-center">
		<img src="~/img/encuesta.png" asp-append-version="true" style="width: 25%" />
	</div>
	<div class="form-group">
		<label></label>
		<input class="form-control" />
	</div>
	<div class="form-group mt-3">
		¿Te gustaría realizar guardias en la oficina?<br />
		<div class="form-check">
			<input class="form-check-input" type="radio" id="respuestaSi" value="true">
			<label class="form-check-label" for="respuestaSi">
				Si
			</label>
		</div>
		<div class="form-check mt-3">
			<input class="form-check-input" type="radio" id="respuestaNo" value="false">
			<label class="form-check-label" for="respuestaNo">
				No
			</label>
		</div>
		<div class="text-center">
			<input type="submit" value="Enviar" class="btn btn-primary" />
		</div>
	</div>
</form>